					«FOREACH rule.actions AS a»
						_«a.actor().uid()».setValue(«a.value()»);
					«ENDFOREACH»
				}
			});
		«ENDFOREACH»
	}
	
	public void setupAssemblies() {
		«FOREACH house.sensors.union(house.actors) AS o»
			_«house.uid()».installAssembly(_«o.uid()»);
		«ENDFOREACH»
			
		«FOREACH rooms AS room»
			«FOREACH room.sensors.union(room.actors) AS o»
				_«room.uid()».installAssembly(_«o.uid()»);
			«ENDFOREACH»
		«ENDFOREACH»
		
		«FOREACH this.program.rules AS rule»
			«FOREACH rule.statement.sensors() AS s»
				_«s.uid()».registerAssemblyProcessor(_«rule.uid()»);
			«ENDFOREACH»
		«ENDFOREACH»
	}
	
	public void initAssemblies() {
		«FOREACH this.program.rules AS rule»
			_«rule.uid()».invoke();
		«ENDFOREACH»
	}
}
